{
    "name": "lantern-serve",
    "version": "0.6.0",
    "dependencies": {
        "@fortawesome/fontawesome-free": "^5.6.3",
        "@node-minify/core": "*",
        "@node-minify/uglify-es": "*",
        "@trust/webcrypto": "*",
        "body-parser": "*",
        "bulma": "*",
        "browserify": "^16.2.3",
        "compression": "^1.7.3",
        "concat": "*",
        "directory-tree": "^2.2.1",
        "event-emitter-es6": "^1.1.5",
        "express": "^4.16.4",
        "fs-extra": "7.x",
        "geohash-distance": "*",
        "gun": "^0.9.999998",
        "gun-tag": "*",
        "helmet": "*",
        "latlon-geohash": "*",
        "leaflet": "^1.4.0",
        "leaflet.locatecontrol": "^0.66.0",
        "node-fetch": "*",
        "node-webcrypto-ossl": "*",
        "request": "*",
        "shortid": "*",
        "simple-node-logger": "^18.12.21",
        "text-encoding": "^0.7.0",
        "typeface-montserrat": "0.0.54",
        "vue": "^2.5.22",
        "vue-long-press-directive": "^1.0.2",
        "wheelnav": "*"
    },
    "devDependencies": {
        "browserify": "^16.2.3",
        "mocha": "^5.2.0",
        "should": "*",
        "standardx": "^3.0.1",
        "uglify-es": "^3.3.9"
    },
    "browser": {
        "vue": "vue/dist/vue.common.js",
        "sea": "gun/sea.js",
        "raphael": "wheelnav/js/dist/raphael.min.js"
    },
    "scripts": {
        "lint": "standardx",
        "fix": "standardx --fix",
        "test": "mocha ./test",
        "browserify": "browserify platform/data.js --standalone LD --outfile web/public/scripts/data.js; browserify platform/apps.js --standalone LA --outfile web/public/scripts/apps.js; browserify platform/maps.js --standalone LM --outfile web/public/scripts/maps.js",
        "uglify": "uglifyjs web/public/scripts/data.js -o web/public/scripts/data.min.js; uglifyjs web/public/scripts/apps.js -o web/public/scripts/apps.min.js;uglifyjs web/public/scripts/maps.js -o web/public/scripts/maps.min.js",
        "pack": "npm run browserify && npm run uglify",
        "postinstall": "npm run pack",
        "start": "node ./web/index.js"
    },
    "standard": {
        "ignore": "web/public/scripts/*"
    },
    "eslintConfig": {
        "env": {
            "node": true,
            "commonjs": true,
            "mocha": true
        },
        "rules": {
            "indent": [
                "error",
                4
            ]
        }
    }
}
